  </div>

  <div>
    <%= form.label :unit_of_measurement, style: "display: block" %>
    <%= form.text_field :unit_of_measurement %>
  </div>

  <div>
    <%= form.label :cost_price, style: "display: block" %>
    <%= form.text_field :cost_price %>
  </div>

  <div>
    <%= form.label :selling_price, style: "display: block" %>
    <%= form.text_field :selling_price %>
  </div>

  <div>
    <%= form.label :reimbursable_amount, style: "display: block" %>
