<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Available:</strong>
    <%= product.available %>
  </p>

  <p>
    <strong>Productable type:</strong>
    <%= product.productable_type %>
  </p>

  <p>
    <strong>Productable:</strong>
    <%= product.productable_id %>
  </p>

  <p>
    <strong>Unit of measurement:</strong>
    <%= product.unit_of_measurement %>
  </p>

  <p>
    <strong>Cost price:</strong>
    <%= product.cost_price %>
  </p>

  <p>
    <strong>Selling price:</strong>
    <%= product.selling_price %>
  </p>

  <p>
    <strong>Reimbursable amount:</strong>
    <%= product.reimbursable_amount %>
  </p>

</div>
